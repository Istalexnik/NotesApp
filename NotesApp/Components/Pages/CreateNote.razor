@page "/create-note"
@using NotesApp.Models
@inject NotesApp.Data.NoteRepository NoteRepository
@inject NavigationManager NavigationManager

<h3>Create New Note</h3>

<div class="form-group">
    <label>Title</label>
    <input @bind="newNote.Title" class="form-control" placeholder="Enter title" />
</div>
<div class="form-group">
    <label>Content</label>
    <textarea @bind="newNote.Content" class="form-control" placeholder="Enter content"></textarea>
</div>

<button @onclick="SaveNoteAsync" class="btn btn-primary">Save</button>
<button @onclick="NavigateBack" class="btn btn-secondary ml-2">Back</button>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <p class="text-danger">@errorMessage</p>
}

@code {
    private Note newNote = new Note();
    private string? errorMessage;

    private async Task SaveNoteAsync()
    {
        // Check for empty title
        if (string.IsNullOrWhiteSpace(newNote.Title))
        {
            errorMessage = "Title cannot be empty.";
            return;
        }

        // Check if title already exists
        if (await NoteRepository.TitleExistsAsync(newNote.Title))
        {
            errorMessage = "A note with this title already exists.";
            return;
        }

        newNote.DateCreated = DateTime.Now;
        await NoteRepository.AddNoteAsync(newNote);

        NavigationManager.NavigateTo("/");
    }

    private void NavigateBack()
    {
        NavigationManager.NavigateTo("/");
    }
}
