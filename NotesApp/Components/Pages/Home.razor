@page "/"
@using NotesApp.Models
@inject NotesApp.Data.NoteRepository NoteRepository
@inject NavigationManager NavigationManager

<h3>Notes</h3>

<button @onclick="CreateNewNote" class="btn btn-primary mb-3">Create New Note</button>

@if (notes != null && notes.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var note in notes)
            {
                <tr>
                    <td>
                        <!-- Make the title clickable to navigate to the edit page -->
                        <a href="#" @onclick="() => EditNote(note.Id)" style="cursor: pointer; text-decoration: underline;">
                            @note.Title
                        </a>
                    </td>
                    <td>@note.DateCreated.ToString("g")</td>
                    <td>
                        <button @onclick="() => DeleteNoteAsync(note.Id)" class="btn btn-danger btn-sm">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No notes available.</p>
}

@code {
    private List<Note> notes = new();

    protected override async Task OnInitializedAsync()
    {
        notes = await NoteRepository.GetNotesAsync();
    }

    private async Task DeleteNoteAsync(int id)
    {
        await NoteRepository.DeleteNoteAsync(id);
        notes = await NoteRepository.GetNotesAsync();
    }

    private void CreateNewNote()
    {
        NavigationManager.NavigateTo("/create-note");
    }

    private void EditNote(int id)
    {
        NavigationManager.NavigateTo($"/edit-note/{id}");
    }
}
